.commentdoc { color\: $(commentdocd); }\n\
.string { color\: $(stringd); }\n\
.nestcom { color\: $(nestcomd); }\n\
.number { color\: $(numberd); }\n\
.fpnumber { color\: $(fpnumberd); }\n\
</style></head><body><pre>\n

=end
</pre></body></html>\n

