keyworddarkb=$(formbb)$(keyworddarkc)$(formba)
keyworddarka=$(forma)

midwordc=
midwordb=$(formbb)$(midwordc)$(formba)
midworda=$(forma)

commentc=
commentb=$(formbb)$(commentc)$(formba)
commenta=$(forma)

commentdocc=$(commentc)
commentdocb=$(formbb)$(commentdocc)$(formba)
commentdoca=$(forma)

stringc=
stringb=$(formbb)$(stringc)$(formba)
stringa=$(forma)

nestcomc=
nestcomb=$(formbb)$(nestcomc)$(formba)
nestcoma=$(forma)

numberc=
numberb=$(formbb)$(numberc)$(formba)
numbera=$(forma)

fpnumberc=
fpnumberb=$(formbb)$(fpnumberc)$(formba)
